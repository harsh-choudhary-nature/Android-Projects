<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="318dp"
        android:layout_height="531dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayoutId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="75dp"
            android:background="@drawable/board"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgViewId1"
                android:layout_width="74dp"
                android:layout_height="91dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:onClick="fadeIn"
                android:tag="0"
                app:layout_column="0"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageViewId2"
                android:layout_width="74dp"
                android:layout_height="91dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:onClick="fadeIn"
                android:tag="1"
                app:layout_column="1"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageViewId3"
                android:layout_width="74dp"
                android:layout_height="91dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:onClick="fadeIn"
                android:tag="2"
                app:layout_column="2"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageViewId4"
                android:layout_width="74dp"
                android:layout_height="91dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="35dp"
                android:onClick="fadeIn"
                android:tag="3"
                app:layout_column="0"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/imageViewId5"
                android:layout_width="74dp"
                android:layout_height="91dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:onClick="fadeIn"
                android:tag="4"
                app:layout_column="1"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/imageViewId6"
                android:layout_width="74dp"
                android:layout_height="91dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:onClick="fadeIn"
                android:tag="5"
                app:layout_column="2"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/imageViewId7"
                android:layout_width="74dp"
                android:layout_height="91dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:onClick="fadeIn"
                android:tag="6"
                app:layout_column="0"
                app:layout_row="2" />

            <ImageView
                android:id="@+id/imageViewId8"
                android:layout_width="74dp"
                android:layout_height="91dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:onClick="fadeIn"
                android:tag="7"
                app:layout_column="1"
                app:layout_row="2" />

            <ImageView
                android:id="@+id/imageViewId9"
                android:layout_width="74dp"
                android:layout_height="91dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:onClick="fadeIn"
                android:tag="8"
                app:layout_column="2"
                app:layout_row="2" />

        </androidx.gridlayout.widget.GridLayout>

        <LinearLayout
            android:id="@+id/linearLayoutId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#715252"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/messageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="25dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="playAgain"
                android:text="Play Again" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>